# =================================
# SMART TOURIST SAFETY SYSTEM
# Environment Configuration Template
# =================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_VERSION=v1

# Database Configuration
# PostgreSQL (Primary Database)
DATABASE_URL=postgresql://username:password@localhost:5432/tourist_safety_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tourist_safety_db
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# MongoDB (Document Storage)
MONGODB_URL=mongodb://localhost:27017/tourist_safety_mongo
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=tourist_safety_mongo
MONGO_USER=
MONGO_PASSWORD=

# Redis (Cache & Session Store)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
CRYPTO_SECRET=your_crypto_secret_for_data_encryption

# API Keys - Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id

# API Keys - AI/ML Services
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key
TENSORFLOW_MODEL_URL=https://your-model-storage.com/models

# Communication Services
# Twilio (SMS & Voice)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_EMERGENCY_NUMBER=+1987654321

# Email Service (NodeMailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=noreply@tourist-safety.gov.in

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Blockchain Configuration
# Ethereum/Polygon Network
BLOCKCHAIN_NETWORK=polygon-testnet
ETHEREUM_RPC_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id
PRIVATE_KEY=your_wallet_private_key_without_0x
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Web3 Configuration
WEB3_PROVIDER_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id
CHAIN_ID=80001
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# IPFS (Distributed Storage)
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Government APIs (India Specific)
AADHAAR_VERIFICATION_API=https://api.uidai.gov.in/verify
PASSPORT_VERIFICATION_API=https://api.passportindia.gov.in/verify
DIGILOCKER_API_KEY=your_digilocker_api_key
DIGILOCKER_API_SECRET=your_digilocker_api_secret

# Emergency Services Integration
POLICE_API_ENDPOINT=https://api.police.gov.in/emergency
AMBULANCE_API_ENDPOINT=https://api.health.gov.in/ambulance
FIRE_SERVICE_API_ENDPOINT=https://api.fireservice.gov.in/alert
DISASTER_MANAGEMENT_API=https://api.ndma.gov.in/alerts

# Geolocation & Mapping
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
HERE_API_KEY=your_here_maps_api_key
GEOCODING_SERVICE_URL=https://api.openweathermap.org/geo/1.0
WEATHER_API_KEY=your_openweather_api_key

# AI/ML Configuration
ML_MODEL_ENDPOINT=http://localhost:5000/predict
ANOMALY_DETECTION_THRESHOLD=0.7
RISK_ASSESSMENT_MODEL_PATH=./models/risk_assessment.h5
BEHAVIOR_ANALYSIS_MODEL_PATH=./models/behavior_analysis.pkl

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIR=./uploads

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
HELMET_ENABLED=true
SESSION_SECRET=your_session_secret_key
BCRYPT_ROUNDS=12

# Monitoring & Analytics
ANALYTICS_API_KEY=your_analytics_api_key
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,as,bn,gu,kn,ml,mr,or,pa,ta,te,ur
TRANSLATION_CACHE_TTL=3600

# Tourism Department Integration
TOURISM_DEPT_API_KEY=your_tourism_dept_api_key
TOURISM_DEPT_ENDPOINT=https://api.tourism.gov.in
TOURIST_REGISTRATION_ENDPOINT=https://api.tourism.gov.in/register

# IoT Device Integration
IOT_MQTT_BROKER=mqtt://localhost:1883
IOT_DEVICE_API_KEY=your_iot_device_api_key
SMARTBAND_SYNC_INTERVAL=30000

# Development/Testing
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/tourist_safety_test
SWAGGER_ENABLED=true

# Docker Configuration (if using Docker)
DOCKER_REGISTRY=your_docker_registry
DOCKER_IMAGE_TAG=latest

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_STORAGE_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=tourist_safety:

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_AI_MONITORING=true
ENABLE_IOT_INTEGRATION=false
ENABLE_VOICE_EMERGENCY=true
ENABLE_MULTILINGUAL=true

# Regional Settings (Northeast India Focus)
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_COUNTRY_CODE=IN
DEFAULT_CURRENCY=INR
EMERGENCY_CONTACT_REGION=northeast_india
